{
	"coc.preferences.extensionUpdateCheck": "never",
	"coc.preferences.noselect": false,
	"coc.preferences.preferCompleteThanJumpPlaceholder": true,
	"coc.preferences.minTriggerInputLength": 2,
	"python.linting.pylintArgs": [
		"--init-hook",
		"from pylint.config import find_pylintrc; import os, sys; sys.path.append(os.path.dirname(find_pylintrc()))"
	],
	"python.venvFolders": [
		".venv",
		"envs",
		".pyenv",
		".direnv"
	],
	"tsserver.enable": true,
	"tsserver.enableJavascript": true,
	"languageserver": {
		"flow": {
			"enable": false,
			"command": "flow-language-server",
			"args": ["--stdio"],
			"filetypes": ["javascript", "javascriptreact"],
			"rootPatterns": [".flowconfig"]
		},
		"pyls": {
			"enable": true,
			"command": "pyls",
			"filetypes": ["python"],
			"settings": {
				"plugins": {
					"pyls_mypy": {
						"enable": false,
						"live_mode": false
					}
				}
			},
		}
	},
	"tslint.enable": true,
	"tslint.jsEnable": false,
	"tslint.run": "onSave",
	"snippets.ultisnips.enable": true,
	"snippets.ultisnips.directories": [ "UltiSnips" ],
	"snippets.extends": {
		"javascriptreact": ["javascript"],
		"typescript": ["javascript"],
	},
	"solargraph.enable": false,
	"solargraph.checkGemVersion": false,
}
